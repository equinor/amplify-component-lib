{
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "types": [
      "node",
      "vite/client",
      "vitest/globals",
      "@types/wicg-file-system-access",
      "bun-types"
    ],
    "moduleResolution": "bundler",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts", "vitest.workspace.ts", "tsdown.config.ts", "eslint.config.js", ".storybook/**/*"],
  "exclude": ["node_modules"]
}
